{
  "name": "osudirect-desktop",
  "version": "1.0.0",
  "description": "Desktop app for osu.direct",
  "main": "dist/main.js",
  "type": "commonjs",
  "build": {
    "extends": null,
    "directories": {
      "output": "release"
    },
    "linux": {
      "icon": "./assets/logo.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "icon": "./assets/logo.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "runAfterFinish": true,
      "oneClick": true,
      "installerIcon": "./assets/logo.ico",
      "uninstallerIcon": "./assets/logo.ico"
    },
    "portable": {
      "artifactName": "osudirect-${version}.exe"
    },
    "appImage": {
      "artifactName": "osudirect-${version}.AppImage"
    },
    "files": [
      "assets/**",
      "html/**",
      "package.json",
      "**/*",
      "node_modules",
      "!src/**/*",
      "!start.ts",
      "!compile.ts",
      "!tsconfig.json"
    ]
  },
  "scripts": {
    "start": "tsx start.ts",
    "rebuild": "electron-rebuild",
    "compile": "tsx compile.ts",
    "linux:start": "npm run build && cp -r src/mitm/scripts/ dist/mitm/ && electron ./dist/main.js",
    "linux:compile": "npm run build && cp -r src/mitm/scripts/ dist/mitm/ && electron-builder",
    "win:start": "npm run build && mkdir dist\\mitm\\scripts\\ > nul && xcopy /E /I src\\mitm\\scripts dist\\mitm\\scripts\\ > nul && electron ./dist/main.js",
    "win:compile": "npm run build && mkdir dist\\mitm\\scripts\\ > nul && xcopy /E /I src\\mitm\\scripts dist\\mitm\\scripts\\ > nul && electron-builder",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "HorizonCode",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.7.2",
    "electron": "^25.8.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/ws": "^8.5.5",
    "better-sqlite3": "^8.6.0",
    "custom-electron-titlebar": "^4.2.7",
    "ws": "^8.13.0"
  }
}
