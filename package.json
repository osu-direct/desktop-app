{
  "name": "osudirect-desktop",
  "version": "0.0.1",
  "description": "Desktop app for osu.direct",
  "main": "dist/main.js",
  "type": "commonjs",
  "build": {
    "extends": null,
    "directories": {
      "output": "release"
    },
    "linux": {
      "icon": "./assets/logo.png"
    },
    "win": {
      "icon": "./assets/logo.png",
      "target": [
        "portable"
      ]
    },
    "nsis": {
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "osu.direct.exe"
    },
    "files": [
      "assets/**",
      "html/**",
      "package.json",
      "**/*",
      "node_modules",
      "!src/**/*",
      "!start.ts",
      "!compile.ts",
      "!tsconfig.json"
    ]
  },
  "scripts": {
    "start": "tsx start.ts",
    "compile": "tsx compile.ts",
    "linux:start": "npm run build && electron ./dist/main.js",
    "linux:compile": "npm run build && electron-builder",
    "win:start": "npm run build && electron ./dist/main.js",
    "win:compile": "npm run build && electron-builder",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7"
  },
  "dependencies": {
    "custom-electron-titlebar": "^4.2.3",
    "electron-reload": "^2.0.0-alpha.1"
  }
}
